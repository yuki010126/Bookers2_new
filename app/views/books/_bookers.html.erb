   <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>


 <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

	<table class="table">
	 <tbody>
 	 <tr></tr>
 	  <tr>
 	   <th>name
 	    <%= user.name %></th>
 	  </tr>
    <tr>
     <th>introduction
      <%= user.introduction %></th>
    </tr>
  </tbody>
 </table>

 <div class="row">
  <%= link_to  edit_user_path(user) do %>
   <span class="fas fa-user-cog"></span>
  <% end %>
 </div>
