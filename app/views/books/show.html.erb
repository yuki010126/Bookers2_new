<div class="container">
 <div class= "row">

  <div class="col-md-3">

     <%= render 'books/bookers', user: @user %>

    <h2 class="mt-3">New book</h2>
     <%= form_with model:@book, local:true do |f| %>

   <div class="form_group">
    <h4>Title</h4>
      <%= f.text_field :title %>
   </div>

   <div class="form_group">
    <h4>opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
   </div>
  </div>


 <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table table table-hover table-inverse">

    <tbody>
     <tr>
      <td><%= link_to user_path(@user) do %>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size:"40x40" %>
      <%= @user.name %><% end %></td>

      <td><%= link_to books_path(@showbook) do %>
      <%= @showbook.title %><% end %></td>

      <td><%= @showbook.body %></td>

         <% if @user == current_user %>

          <td><%= link_to "Edit", edit_book_path(@showbook)  %></td>
          <td><%= link_to "Destroy", book_path(@showbook), method: :delete, "data-confirm" => "Are you sure?" %></td>

         <% end %>

      </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>